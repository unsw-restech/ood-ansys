<%-
  ncpus = num_cores.blank? ? 1 : num_cores.to_i
  mem = ncpus * 8
-%>
---
batch_connect:
  template: "vnc"
script:
  job_name: "ansys_ood_test"                                                                                                                                          
  native:
    - "-l"
    - "select=1:ncpus=<%= ncpus %>:mem=<%= mem %>gb"
  email: "<%= ENV['USER'] %>@unsw.edu.au"

